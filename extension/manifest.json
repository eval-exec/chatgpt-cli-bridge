{
  "manifest_version": 3,
  "name": "ChatGPT CLI Bridge",
  "version": "1.0.0",
  "description": "Bridge between ChatGPT web interface and CLI",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
